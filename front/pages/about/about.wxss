/* pages/aboutme/about.wxss */
.wall{
  width: 100%;
  height: 300rpx;
  background: rgb(52,152,219);
  border: 1rpx solid rgb(52,152,218);
}
.wall image{
  border-radius:30rpx;
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx auto 0;
}

.title{
  font-size: 20px;
  font-weight: bold;
}
.textarea{
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  text-indent: 2rem;
}
.textarea text{
  display: block;
}
.info{
  margin: 40rpx 0;
}
.green{
  color: green;
}